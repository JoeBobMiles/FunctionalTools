{
  "name": "@functional-things/everything",
  "version": "0.0.0",
  "description": "TypeScript utilities for functional programming.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:clean": "npm run clean && npm run build",
    "clean": "node ./scripts/clean.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "npm run build:clean",
    "prepublishOnly": "pinst --enable",
    "postpublish": "pinst --disable",
    "_postinstall": "node ./scripts/post-install.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/functional-things/functional-things.git",
    "directory": "packages/everything"
  },
  "keywords": [
    "functional-things",
    "functional",
    "programming",
    "typescript",
    "ts",
    "fp",
    "tools",
    "utilities"
  ],
  "author": "Joseph Miles <joe@jrm.dev> (https://jrm.dev)",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/functional-things/functional-things/issues"
  },
  "homepage": "https://github.com/functional-things/functional-things/tree/master/packages/everything#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/*",
    "scripts/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "jest": "^26.6.3",
    "pinst": "^2.1.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
